<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/colorPrimary">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/colorPrimary"
    android:layout_centerVertical="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title" android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" android:textSize="35dp" android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/description" android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" android:textSize="30dp"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="New Button"
        android:id="@+id/okButton" android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
</LinearLayout>
</RelativeLayout>